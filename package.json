{
  "name": "tonym",
  "version": "1.1.4",
  "main": "dist/electron/main.js",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "electron": "electron electron",
    "electron:build": "tsc -p electron/tsconfig.json",
    "electron:start": "npm run electron:build && electron dist/electron/main.js",
    "electron:dev": "concurrently \"ng serve\" \"wait-on http://localhost:4207 && npm run electron:start\"",
    "electron:prod": "npm run build --configuration=production --no-cache && npm run electron:build &&  npx electron-builder",
    "electron:bundle": "npm run build --configuration=production --no-cache && npm run electron:build && dotenv -e .env -- npx electron-builder --publish always",
    "check": "dotenv -e .env"
  },
  "build": {
    "appId": "com.toynm.electron",
    "publish": [
      {
        "provider": "github",
        "owner": "Draftscode",
        "repo": "tonym"
      }
    ],
    "extraResources": [
      {
        "from": "build",
        "to": "build"
      }
    ],
    "directories": {
      "output": "dist-electron"
    },
    "files": [],
    "win": {
      "target": "nsis",
      "icon": "build/icons/win/icon.ico"
    },
    "linux": {
      "target": "AppImage"
    },
    "mac": {
      "target": "dmg"
    }
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^20.1.2",
    "@angular/compiler": "^20.1.2",
    "@angular/core": "^20.1.2",
    "@angular/forms": "^20.1.2",
    "@angular/platform-browser": "^20.1.2",
    "@angular/platform-browser-dynamic": "^20.1.2",
    "@angular/router": "^20.1.2",
    "@ngx-translate/core": "^16.0.4",
    "@ngx-translate/http-loader": "^16.0.1",
    "@primeng/themes": "^20.0.0",
    "@tailwindcss/postcss": "^4.1.11",
    "electron-log": "^5.3.3",
    "electron-updater": "^6.3.9",
    "jose": "^6.0.12",
    "postcss": "^8.5.3",
    "primeicons": "^7.0.0",
    "primeng": "^20.0.0",
    "rxjs": "~7.8.0",
    "tailwindcss-primeui": "^0.6.1",
    "tslib": "^2.3.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@angular/build": "^20.1.1",
    "@angular/cli": "^20.1.1",
    "@angular/compiler-cli": "^20.1.2",
    "@electron/remote": "^2.1.2",
    "@types/electron": "^1.6.12",
    "@types/jasmine": "~5.1.0",
    "concurrently": "^9.1.2",
    "dotenv": "^16.4.7",
    "dotenv-cli": "^8.0.0",
    "electron": "^35.1.2",
    "electron-builder": "^25.1.8",
    "electron-icon-maker": "^0.0.5",
    "jasmine-core": "~5.6.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "postcss": "^8.5.3",
    "typescript": "~5.8.3",
    "wait-on": "^8.0.3"
  }
}
